extends layout

block content
  .page-wrapper
    .mobile-header
      .mobile-branding
        img.mobile-brand-logo(src="/images/logo.png" alt="Tornado Logo")
        span.mobile-brand-name CyberHatch
    .signin-container
      .signin-left-panel
        .branding
          img.brand-logo(src="/images/logo.png" alt="App Logo")
          h2.brand-name CyberHatch
        .welcome-text
          
          .feature-list
            .feature-item
              .feature-icon ✓
              .feature-text Secure Authentication
            .feature-item
              .feature-icon ✓
              .feature-text Fast & Reliable
            .feature-item
              .feature-icon ✓
              .feature-text Cross-Device Access
      
      .signin-card
        .signin-header
          h1.signin-title Sign Up
          p.signin-subtitle Create your account to get started
        
        #error-message.error-message.hidden
        #success-message.success-message.hidden
        
        form#signup-form
          .form-group
            label(for="name") Full Name
            .input-container
              span.input-icon
                // User SVG icon
                svg(width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg")
                  circle(cx="10" cy="7" r="3" stroke="#bfc6e0" stroke-width="1.5")
                  path(d="M3.5 16a6.5 6.5 0 0 1 13 0" stroke="#bfc6e0" stroke-width="1.5")
              input#name(type="text" placeholder="John Doe" required)
          
          .form-group
            label(for="email") Email Address
            .input-container
              span.input-icon
                // Email SVG icon
                svg(width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M2 4.5A2.5 2.5 0 0 1 4.5 2h11A2.5 2.5 0 0 1 18 4.5v11A2.5 2.5 0 0 1 15.5 18h-11A2.5 2.5 0 0 1 2 15.5v-11Z" stroke="#bfc6e0" stroke-width="1.5")
                  path(d="M3.5 5.5 10 11l6.5-5.5" stroke="#bfc6e0" stroke-width="1.5" stroke-linecap="round")
              input#email(type="email" placeholder="your@email.com" required)
          
          .form-group
            label(for="password") Password
            .input-container
              span.input-icon
                // Password SVG icon
                svg(width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg")
                  rect(x="4" y="8" width="12" height="8" rx="2" stroke="#bfc6e0" stroke-width="1.5")
                  path(d="M7 8V6a3 3 0 1 1 6 0v2" stroke="#bfc6e0" stroke-width="1.5")
                  circle(cx="10" cy="13" r="1" fill="#bfc6e0")
              input#password(type="password" placeholder="••••••••" required)
          
          .form-group
            label(for="confirm-password") Confirm Password
            .input-container
              span.input-icon
                // Password SVG icon (reuse)
                svg(width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg")
                  rect(x="4" y="8" width="12" height="8" rx="2" stroke="#bfc6e0" stroke-width="1.5")
                  path(d="M7 8V6a3 3 0 1 1 6 0v2" stroke="#bfc6e0" stroke-width="1.5")
                  circle(cx="10" cy="13" r="1" fill="#bfc6e0")
              input#confirm-password(type="password" placeholder="••••••••" required)
          
          .password-requirements
            p.requirements-title Password Requirements:
            ul.requirements-list
              li#min-length-req At least 8 characters
              li#uppercase-req At least one uppercase letter
              li#lowercase-req At least one lowercase letter
              li#number-req At least one number
              li#special-req At least one special character
          
          .form-agreement
            input#terms(type="checkbox" required)
            label(for="terms") 
              | I agree to the 
              a(href="/terms") Terms of Service
              |  and 
              a(href="/privacy") Privacy Policy
          
          button#signup-button.primary-button(type="submit")
            span.button-text Create Account
            span#loading-spinner.spinner.hidden ◌
        
        .divider
          span.divider-text or
        
        .social-signin
          button.social-button.google-button(type="button")
            img.brand-logo(src="/images/google.png" alt="App Logo")
            span Sign up with Google
          
          
        
        .signup-link
          p
            | Already have an account? 
            a(href="/signin") Sign In

block scripts
  script(src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js")
  script(src="https://www.gstatic.com/firebasejs/9.22.0/firebase-auth-compat.js")
  script(src="https://www.gstatic.com/firebasejs/9.22.0/firebase-firestore-compat.js")
  script(src="/javascripts/signup.js")